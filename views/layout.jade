doctype html
html
  head
    //modal for details
    div(class="modal fade" id="details" tabindex="-1" role="dialog" aria-hidden="true")
      div(class="modal-dialog modal-lg" role="document")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-title") Details
            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
          div(class="modal-body")
            form(id='detailForm')
            #detailList
              div(class="form-group row")
                label(for="problem" class="col-sm-2 col-form-label") Title:
                div(class="col-sm-10")
                  textarea(form="detailForm" type="text" class="form-control-plaintext" id="title" rows="1" readonly)
              div(class="form-group row")
                label(for="problem" class="col-sm-2 col-form-label") Problem:
                div(class="col-sm-10")
                  textarea(form="detailForm" class="form-control-plaintext" id="problem" rows="5" readonly)
              div(class="form-group row")
                label(for="solution" class="col-sm-2 col-form-label") Solution:
                div(class="col-sm-10")
                  textarea(form="detailForm" class="form-control-plaintext" id="solution" rows="5" readonly)
              div(class="form-group row")
                label(for="category" class="col-sm-2 col-form-label") Category:
                div(class="col-sm-5")
                  input(form="detailForm" class="form-control-plaintext" id="category" readonly)
                label(for="problem" class="col-sm-2 col-form-label") Date Created:
                div(class="col-sm-3")
                  input(form="detailForm" class="form-control-plaintext" id="date" readonly)
          div(class="modal-footer")
            button(class="btn btn-info" data-dismiss="modal") Close


    //modal for categories
    div(class="modal fade" id="categoryAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
      div(class="modal-dialog" role="document")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-title") Categories
            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
          div(class="modal-body")
            #categoryList

            form(id='addCategoryForm')
            #addCategory
              div(class="form-group row")
                div(class="col-sm-10")
                  input(form="addCategoryForm" class="form-control" id="category")
                div(class="col-sm-2")
                  button(form="addCategoryForm" type="submit" class="btn btn-info" id="btnAddCategory") +



    //modal for adding problems
    div(class="modal fade" id="problemAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
      div(class="modal-dialog modal-lg" role="document")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-title") New Problem
            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
          div(class="modal-body")
            form(id='addProblemForm')
            #addProblem
              div(class="form-group row")
                label(for="problem" class="col-sm-2 col-form-label") Title:
                div(class="col-sm-10")
                  textarea(form="addProblemForm" type="text" class="form-control" id="title" rows="1")

              div(class="form-group row")
                label(for="problem" class="col-sm-2 col-form-label") Problem:
                div(class="col-sm-10")
                  textarea(form="addProblemForm" class="form-control" id="problem" rows="5")
              div(class="form-group row")
                label(for="solution" class="col-sm-2 col-form-label") Solution:
                div(class="col-sm-10")
                  textarea(form="addProblemForm" class="form-control" id="solution" rows="5")
              div(class="form-group row")
                label(for="category" class="col-sm-2 col-form-label") Category:
                div(class="col-sm-5")
                  select(form="addProblemForm" class="form-control" id="category")

              div(class="modal-footer")

                button(form="addProblemForm" type="submit" class="btn btn-info" data-dismiss="modal" id="btnAddProblem") Add Problem
    //Modal for editing
    div(class="modal fade" id="problemEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
      div(class="modal-dialog modal-lg" role="document")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-tite") Edit Problem
            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
          div(class="modal-body")
            form(id="editProblemForm")
            #editProblem
              div(class="form-group row")
                label(for="problem" class="col-sm-2 col-form-label") Title:
                div(class="col-sm-10")
                  textarea(form="editProblemForm" type="text" class="form-control" id="title" rows="1")
              div(class="form-group row")
                label(for="problem" class="col-sm-2 col-form-label") Problem:
                div(class="col-sm-10")
                  textarea(form="editProblemForm" class="form-control" id="editproblem" rows="5")
              div(class="form-group row")
                label(for="solution" class="col-sm-2 col-form-label") Solution:
                div(class="col-sm-10")
                  textarea(form="editProblemForm" class="form-control" id="editsolution" rows="5")
              div(class="form-group row")
                label(for="category" class="col-sm-2 col-form-label") Category:
                div(class="col-sm-5")
                  select(form="editProblemForm" class="form-control" id="editcategory")
                label(for="ID" class="col-sm-1 col-form-label") ID:
                div(class="col-sm-4")
                  input(form="editProblemForm" class="form-control" id="ID" readonly)
              div(class="modal-footer")
                button(form="editProblemForm" type="submit" class="btn btn-info" data-dismiss="modal" id="btnEditProblem") Update Problem
    //Navbar
    div.top
      #navbar
        Nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
          a(id="title" class="navbar-brand" href="#/All") #{title}
          div(class="collapse navbar-collapse" id="navbarSupportedContent")
            ul(class="navbar-nav mr-auto")
              li(class="nav-item dropdown" id="listcategories")
                a(class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Catalogue
                  div(class="dropdown-menu" id="dropdownMenu" aria-labelledby="navbarDropdown")
              li(class="nav-item")
                form(class="form-inline" autocomplete="on")
                  #search
                    div(class="form-group mx-sm-3 mb-2")
                      input(id='#searchbox' class="form-control" type="search" placeholder="Search" aria-label="search")
                      &nbsp;
                      button(type="submit" class="btn btn-light") Submit

          div(class="pull-right")
            ul(class="navbar-nav")
              li(class="nav-item dropdown")
                button(class="nav-link dropdown-toggle btn" href="#" id="#navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Admin
                div(class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink")
                  a(class="dropdown-item" href="#categoryAdd" data-toggle="modal" data-target="#categoryAdd") Category Menu
                  div(class="dropdown-divider")
                  a(href="#problemAdd" class="dropdown-item" data-toggle="modal" data-target="#problemAdd") Add a Problem

    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
  body
    block content
    script(src="https://code.jquery.com/jquery-3.4.1.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script(src="/javascripts/bootstrap.js")
    script(src="/javascripts/global.js")
